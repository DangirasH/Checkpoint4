{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="navbar">
			<div class="menu">
				<h3 class="logo">
					<a class="lorder" href="/"><img src="{{ asset('build/images/favicon.png') }}" class="rounded m-2" alt="DanTravels" width="50" height="44"></a>Dan<span>Travels</span>
				</h3>
				<div class="hamburger-menu">
					<div class="bar"></div>
				</div>
			</div>
		</div>

		<div class="main-container-fluid">
			<div class="main">
				<header>
					<div class="overlay">
						<div>
							<h2 class="text-center text-primary mb-5">Connexion administrateur</h2>


							<div class="inner">
								{% if error %}
									<div class="text-center text-danger pt-5">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}


								<form action="{{ path('connection') }}" method="post" class="w-50 mx-auto mb-5">
									<label for="username" class="form-label">
										<i class="bi bi-person-bounding-box"></i>
										Nom d'utilisateur</label>
									<input class="form-control mb-3" type="text" id="username" name="_username" value="{{ last_username }}"/>
									<label for="password" class="form-label">
										<i class="bi bi-key-fill"></i>
										Mot de passe</label>
									<input class="form-control mb-3" type="password" id="password" name="_password"/>
									<input type="hidden" name="_target_path" value="/admin/home"/>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<button type="submit" class="btn btn-primary my-2">
										<i class="bi bi-arrow-right-square-fill"></i>
										Connexion</button>
								</form>


							</div>
						</div>
					</div>
				</header>
			</div>
			<div class="shadow one"></div>
			<div class="shadow two"></div>
			{% block header %}
				{% include 'components/_navbar.html.twig' %}
			{% endblock %}
		</div>
	{% endblock %}
