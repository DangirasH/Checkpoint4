{% extends 'base.html.twig' %}
{% block stylesheets %}
	{{ encore_entry_link_tags('voyage') }}
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="navbar">
			<div class="menu">
				<h3 class="logo">
					<a class="lorder" href="/"><img src="{{ asset('build/images/favicon.png') }}" class="rounded m-2" alt="DanTravels" width="50" height="44"></a>Dan<span>Travels</span>
				</h3>
				<div class="hamburger-menu">
					<div class="bar"></div>
				</div>
			</div>
		</div>

		<div class="main-container-fluid">
			<div class="main">
				<header>
					<div class="overlay">
						<div>

							<h2 class="text-center text-primary mb-5">{{ travel.location}}</h2>
							<div class="mb-5">
								<a href="/travel" class="btn btn-primary d-block mx-auto w-50"><i class="bi bi-arrow-left me-2"></i>Retour aux Voyages</a>
							</div>
							<div class="myCard d-flex flex-row">
								{% for recomendation in recomendations %}

									{% include 'components/_cardreco.html.twig' %}
								{% else %}
									<li>Aucune recommandation disponible</li>
								{% endfor %}
							</div>


							<div class="inner"></div>
						</div>
					</div>
				</header>
			</div>
			<div class="shadow one"></div>
			<div class="shadow two"></div>
			{% block header %}
				{% include 'components/_navbar.html.twig' %}
			{% endblock %}
		</div>
	</div>
{% endblock %}
