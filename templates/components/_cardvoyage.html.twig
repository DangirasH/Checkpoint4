<div class="card ">
	<img class="card-img-top w-100" src="{{ asset('build/images/' ~ travel.image) }}" alt="{{travel.location}}">
	<div class="card-body m-0">
		<h5 class="card-title mt-3">{{ travel.location }}</h5>
		<p class="card-text">{{ travel.date ? travel.date|date('d-m-Y') : '' }}</p>
		<p class="card-text">{{ travel.country }}</p>
		<a href=" {{ path('travel_show', {'id': travel.id }) }}" class="btn btn-primary"><i class="bi bi-lightbulb me-2"></i>Mes Recommendations</a>
	</div>
</div>
